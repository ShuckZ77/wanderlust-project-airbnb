<% layout('layouts/boilerplate') -%>


<body>

  <!-- <h3 class="my-3">ALL LISTINGS</h3> -->

  <!-- <form method="GET" action="/listings/new">
    <button>CREATE NEW LISTING</button>
  </form> -->

  <div class="filters" id="filters">
      <div class="filter">
        <i class="fa-solid fa-fire"></i>
        <p>Trending</p>
      </div>
      <div class="filter">
        <i class="fa-solid fa-bed"></i>
        <p>Rooms</p>
      </div>
      <div class="filter">
        <i class="fa-solid fa-city"></i>
        <p>Iconic cities</p>
      </div>
      <div class="filter">
        <i class="fa-solid fa-mountain-sun"></i>
        <p>Mountains</p>
      </div>
      <div class="filter">
        <i class="fa-brands fa-fort-awesome"></i>
        <p>Castles</p>
      </div>
      <div class="filter">
        <i class="fa-solid fa-tree"></i>
        <p>Islands</p>
      </div>
      <div class="filter">
        <i class="fa-solid fa-sailboat"></i>
        <p>Boats</p>
      </div>
      <div class="filter">
        <i class="fa-brands fa-galactic-republic"></i>
        <p>Arctic</p>
      </div>
      <div class="filter">
        <i class="fa-solid fa-person-swimming"></i>
        <p>Pools</p>
      </div>    
      <div class="filter">
        <i class="fa-solid fa-cow"></i>
        <p>Farms</p>
      </div>    
  </div>

  <div class="container text-center">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3">
      <% for(let listing of allListings) { %>
        <div class="col">
          <a href="/listings/<%= listing._id %>" class="card-listing-link">

            <div class="card index-cards" style="width: 20rem;">
              <img src="<%= listing.image.url %>" class="card-img-top" alt="listing-image" style="width: 20rem; height: 20rem;">
              <div class="card-img-overlay"></div>
              <div class="card-body">
                <h5 class="card-title"><%= listing.title %></h5>
                <p class="card-text text-wrap">
                  <%= listing.description %> <br>
                  &#8377; <%= (listing.price) ? listing.price.toLocaleString("en-IN"):"NA" %> per night.
                </p>
              </div>
            </div>

          </a>
        </div>      
      <% } %>
    </div>
  </div>

</body>
